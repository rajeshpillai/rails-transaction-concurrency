<h1>Accounts</h1>

<div id="accounts">
  <% @accounts.each do |account| %>
    <%= render account %>
    <p>
      <%= link_to "Show this account", account %>
      <%= link_to "Show Transactions", account_transactions_path(account) %>
    </p>
  <% end %>
</div>

